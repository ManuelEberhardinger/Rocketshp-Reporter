<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :company_id %><br>
    <%= f.text_field :company_id, readonly: true, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :post_type %><br>
    <%= f.collection_select :post_type, get_all_post_types.keys, :to_s, :to_s, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :post %><br>
    <%= f.text_area :post, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>
