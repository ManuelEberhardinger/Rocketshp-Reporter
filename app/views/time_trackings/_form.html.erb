<%= form_for(@time_tracking) do |f| %>
  <% if @time_tracking.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@time_tracking.errors.count, "error") %> prohibited this time tracking from being saved:</h2>

      <ul>
      <% @time_tracking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.hidden_field :company_id, readonly: true, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.hidden_field :user_id, readonly: true, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :spent_time %>
    <%= f.number_field :spent_time, step: 'any', class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :hourly_rate %>
    <%= f.text_field :hourly_rate, step: 'any', class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :date %>
    <div class="input-group date">
      <%= f.date_select :date, class: "form-control" %>
    </div>
  </div>
  <br>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>
