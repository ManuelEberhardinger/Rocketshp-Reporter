<div id="data-block">
  <h1>Instagram</h1>
  <table class="table table-striped table-condensed">
    <tr>
      <th>Date</th>
      <th>Image</th>
      <th>Post</th>
      <th>Likes</th>
      <th>Comments</th>
    </tr>
    <% for media_item in @return %>
    <tr>
      <td><%= DateTime.strptime(media_item.caption.created_time,'%s').strftime("%d/%m/%Y") %></td>
      <td><img src="<%= media_item.images.thumbnail.url %>"></td>
      <td><%= link_to media_item.caption.text, media_item.link, target: "_blank" %></td>
      <td><%= media_item.likes[:count].to_s %></td>
      <td><%= media_item.comments[:count].to_s %></td>
    </tr>
    <% end %>
  </table>

<footer>
  <%= @face.html_safe %> |
  <%= link_to 'Back to Company Page', @company %>
</footer>
