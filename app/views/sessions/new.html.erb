<div id="header-bar" class="container-fluid row">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          <%= image_tag "logo-trans-white01.png", height: "30", class: "navbar-logo" %>
        </a>
      </div>
    </div>
  </nav>
  <br><br><br>
</div>
<div class="row">
  <div id="button-div" class="col-md-4 col-md-offset-4">
    <h1 class="text-center">Login</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
  <script>
  var body_height = $('body').height() + $('#header-bar').height();
  $('#button-div').css({'margin-top':Math.abs((body_height-$(this).height())/3)+'px'});
  </script>
</div>
