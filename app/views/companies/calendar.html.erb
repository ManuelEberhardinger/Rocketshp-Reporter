<div class="col-sm-2">
  <%= render 'layouts/sidebar' %>
</div>
<div class="col-sm-10">
  <div class="row">
    <div class="container-fluid">
      <%= month_calendar events: @company.posts do |date, posts| %>
        <%= content_tag :div, class: "calendar-day", style: "height:inherit;", data: {date: date} do %>
          <div class="navbar-right container-fluid">
            <%= date.day %>
          </div>
          <% posts.each do |post| %>
            <%= content_tag :span, class: "insideLink", style: "cursor:pointer;", data: {number: post.id} do %>
              <%= get_all_post_types[post.post_type].html_safe %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <div class="pull-right btn-group">
        <%= link_to "New Post", new_post_path, class: "btn btn-primary", remote: true %>
        <%= link_to "Create Report", get_month_for_posts_report(@start_date), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
