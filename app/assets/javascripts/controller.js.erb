
function init() {
  $('.datepicker').datepicker({
     format: 'dd/mm/yyyy'
  });

  $('.collapse-close').click(function () {
      $('.collapse.in').collapse('hide');
  });

  //creates the click callback for clicks on a cell in the simple calendar
  jQuery(function() {
    return $(".calendar-day").on("click", function() {
      var date;
      date = $(this).data("date");
      $.ajax({
        url: "/posts/new?post[start_time]=" + date,
        dataType: 'jsonp'
      });
    });
  });

  jQuery(function() {
    return $(".insideLink").on("click", function() {
      event.stopImmediatePropagation();
      var postNumber;
      postNumber = $(this).data("number");
      $.ajax({
        url: "/posts/" + postNumber,
        dataType: 'jsonp'
      });
    });
  });
}
